<h1><%= @project.name %></h1>
<%= link_to 'Edit', edit_project_path(@project) %> | <%= link_to "delete", @project, :method => :delete, :confirm => "You sure?",:title => "Delete #{@project.name}" %><br>
Time Span:
<%= form_tag(projects_path, method: :get) do %>
	Start:<br> <%= select_date @start_date, {:prefix => 'start_date'}, {:class => "input-small"} %><br>
	Finish:<br> <%= select_date @end_date, {:prefix => 'end_date'}, {:class => "input-small"} %><br>
<%= submit_tag %>
<% end %>

<% total_time = 0 %>

<% @project.schedules.each do |s| %>
	<% if (@start_date.to_datetime < s.end_at && s.end_at < (@end_date.to_datetime+1.day)) && (@start_date.to_datetime < s.start_at && s.start_at < (@end_date.to_datetime+1.day)) %>
		<% start = s.start_at %>
		<% finish = s.end_at %>
	<% elsif (@start_date.to_datetime < s.end_at && s.end_at < (@end_date.to_datetime+1.day)) %>
		<% start = s.start_at %>
		<% finish = @end_date.to_datetime+1.day %>
	<% elsif (@start_date.to_datetime < s.start_at && s.start_at < (@end_date.to_datetime+1.day)) %>
		<% start = @start_date.to_datetime %>
		<% finish = s.end_at %>
	<% else %>
		<% start = @start_date %>
		<% finish = @start_date %>
	<% end %>
	<% total_time = total_time + (finish - start) %>
<% end %>
Total Time Spent = <%= (total_time/60/60).round %> hours
