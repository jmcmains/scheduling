		<%= text_field_tag :project_name, (schedule.project.name if schedule.project), data: {autocomplete_source: autocomplete_projects_path}, class: "autocomplete", id: schedule.id, :style => "display:inline;margin:5px;padding:11px;width:160px" %><br>
		<%= text_field_tag :start_at,(schedule.formatted_start_at if schedule.start_at), style: "display:inline;margin:5px;padding:11px;width:160px", required: true %><br>
		<%= text_field_tag :end_at, (schedule.formatted_end_at if schedule.end_at), style: "margin:5px;display:inline;padding:11px;width:160px", id: "end_at#{schedule.id}" %><br>
		<div style="float:right">
		<%= hidden_field_tag :commit %>
		<span id="update_<%= schedule.id %>" style="display:none;float:left;margin:5px;padding-top:11px"><i class="icon-thumbs-up icon-green"></i></span>
		<button class="btn btn-success btn-large" name="go" style="float:left;margin:5px" type="submit" onClick="document.form<%= schedule.id %>.commit.value='go'">
  		<i class="icon-retweet icon-white"></i>
  	</button>
  	<button class="btn btn-danger btn-large" name="del" style="float:left;margin:5px;" type="submit" onClick="document.form<%= schedule.id %>.commit.value='del'">
			<i class="icon-remove icon-white"></i>
		</button>
		</div>	
<% end %>
</div>

