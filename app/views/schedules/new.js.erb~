<% if @command == "del" %>
  $("#project<%= @project.id %>").fadeOut("slow");
<% elsif @command == "go" %>
  <% if @new %>
    $("#projects").html("<%=j render 'static_pages/project' %>");
  <% else %>
    <% if @current_project %>
      $(".schedule-primary span").html("<%=j render 'static_pages/home_buttons', project: @current_project %>");
      $(".schedule-primary").removeClass("schedule-primary");
    <% end %>
    $("#project<%= @project.id %>").addClass("schedule-primary");
    $(".schedule-primary #btn<%= @project.id %>").html("<%=j render 'static_pages/home_buttons', project: @project %>")
  <% end %>
<% elsif @command == "stop" %>
  $(".schedule-primary span").html("<%=j render 'static_pages/home_buttons', project: @current_project %>");
  $(".schedule-primary").removeClass("schedule-primary");
<% end %>
$("#hours_popup").data('day',<%= Schedule.total_time('day',current_user) %>)
$("#hours_popup").data('week',<%= Schedule.total_time('week',current_user) %>)
$("#hours_popup").data('working', <%= current_user.working? %>)
update_sched();
schedTimer();
$("#stopbutton").html("<%=j render 'static_pages/stop_button' %>");

