	<%= form_for event, remote: true do |f| %>
		<td style="text-align:left;vertical-align:center"><%= f.text_field :project_name, data: {autocomplete_source: autocomplete_projects_path}, class: "autocomplete", id: event.id, :style => "display:inline;margin:0" %></td>

		<td style="text-align:center;vertical-align:center;padding-right:10px"><%= f.datetime_select :start_at, {:ampm => true}, {class: "input-mini",style: "margin:0"} %></td>

		<td style="text-align:center;vertical-align:center">
			<% if event.end_at.blank? %>
				<%= f.text_field :end_at, {style: "margin:0", class: "input-small"} %>
			<% else %>
				<%= f.datetime_select :end_at, {:ampm => true}, {class: "input-mini",style: "margin:0"} %>
			<% end %>
		</td>

		<td style="text-align:center;vertical-align:center"><%= f.submit "Update", class: "btn btn-success" %></td>
	<% end %>
	<td style="text-align:center;vertical-align:center">
		<%= link_to "-", event, :method => :delete, :confirm => "You sure?",:title => "Delete #{event.project.name}", class: "btn btn-danger" %></td>
	<td class="success"><span id="update_<%= event.id %>"></span></td>
