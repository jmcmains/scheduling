<script>
$(function() {
    var checkin = $('#checkin<%= project.id %>').datepicker({ onRender: function(date) {}}).on('changeDate', function(ev) {checkin.hide();}).data('datepicker');
    var checkout = $('#checkout<%= project.id %>').datepicker({ onRender: function(date) {}}).on('changeDate', function(ev) {checkout.hide();
    }).data('datepicker');
});
</script>
