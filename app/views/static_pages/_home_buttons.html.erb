<% if project.active?(current_user)  %>
	<button class="btn btn-danger btn-large home-left" name="stop" type="submit">
		<i class="icon-pause icon-white"></i>
	</button>
<% else %>
	<button class="btn btn-success btn-large home-left" name="go" type="submit">
		<i class="icon-play icon-white"></i>
	</button>
<% end %>	
<button class="btn btn-warning btn-large  home-left" name="del" type="submit" remote="true">
	<i class="icon-star icon-white"></i>
</button>
