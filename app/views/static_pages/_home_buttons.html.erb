<% if project.active?(current_user)  %>
	<button class="btn btn-danger btn-lg home-left" name="stop" type="submit">
		<i class="glyphicon glyphicon-pause"></i>
	</button>
<% else %>
	<button class="btn btn-success btn-lg home-left" name="go_single" type="submit">
		<i class="glyphicon glyphicon-play"></i>
	</button>
<% end %>
<button class="btn btn-warning btn-lg home-left" name="del" type="submit">
	<i class="glyphicon glyphicon-star"></i>
</button>
