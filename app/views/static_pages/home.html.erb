<header class="navbar-fixed-top" style="width:100%;top:40px;z-index:50;text-align:center">
  <div class="navbar-inner go-bar" style="width:100%;text-align:center">
      <%= form_tag(new_schedule_path, class: "form-inline", :style => "display:inline", method: :get) do %>
				<div class="input-append" style="width:100%">
					<%= text_field_tag :name, "", data: {autocomplete_source: autocomplete_projects_path}, placeholder: "Project", class: "autocomplete input-medium", id: "search-bar" %>
  				<button class="btn btn-success btn-large" name="go" type="submit" id="main-play">
						<i class="icon-play icon-white"></i>
					</button>
			<% end %>
<span id="stopbutton">
<%= render "stop_button" %>
</span>
	  </div>
  </div>
</header>
<div id="projects">
<% Project.all.sort_by(&:name).each do |project| %>
	<% if project.features.find_by_user_id(current_user) && project.features.find_by_user_id(current_user).featured && project.in_use?(current_user) %>
			<% if project.active?(current_user) %>
			<div class="img-rounded schedule schedule-primary" id="project<%= project.id %>">
			<% else %>
			<div class="img-rounded schedule" id="project<%= project.id %>">
			<% end %>
			<%= form_tag(new_schedule_path, class: "form-inline", :style => "display:inline", method: :get, remote: true) do %>
			<%= link_to project.name, project_path(project), title: project.name, rel: "tooltip", style:"", class: "btn btn-inverse title" %><br>
				<%= hidden_field_tag :name, project.name  %>
				<span id="btn<%= project.id %>"><%= render "home_buttons", project: project %></span>
	<% end %>
	</div>
<% end %>
<% end %>
</div>
<script>
$(window).resize(function() {contresize();});
$( ".autocomplete" ).autocomplete({source: $( "#name" ).data('autocomplete-source')});
$(function() {
	contresize();
	var oh=$('#main-play').outerHeight();
	var sb=$('#search-bar').height();
	var padding=(oh-sb)/2-1;
	$('#search-bar').css('padding-top',(padding + 'px'));
	$('#search-bar').css('padding-bottom',(padding + 'px'));
	if ('<%= current_user.working? %>' == 'true') {
  	var i_day = parseFloat('<%= Project.total_time("day",current_user) %>');
  	var i_week = parseFloat('<%= Project.total_time("week",current_user) %>');
  	var timer1 = setInterval(function() { $('#hours_day').text( Math.round(i_day++/36)/100 ) }, 1000)
  	var timer2 = setInterval(function() { $('#hours_week').text( Math.round(i_week++/36)/100 ) }, 1000)
}
});

function contresize(){
  var win_width = $(window).width();
	var box_width = $('.schedule').outerWidth()+10;
	var box_count = (Math.floor(win_width/box_width));
	var total_width = box_count * box_width+1;
	$('#projects').css('width',total_width)
  }
  

</script>

