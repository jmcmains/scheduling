<script>
$(function() {
if ($(window).width() < 680) {
$('#nav').html('<%= escape_javascript render "layouts/navbar", width: "thin" %>')
} else {
$('#nav').html('<%= escape_javascript render "layouts/navbar", width: "wide" %>')
}
});
$(window).resize(function() {
if ($(window).width() < 680) {
$('#nav').html('<%= escape_javascript render "layouts/navbar", width: "thin" %>')
} else {
$('#nav').html('<%= escape_javascript render "layouts/navbar", width: "wide" %>')
}
});
</script>
