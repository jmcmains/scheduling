  <title><%= @title ? @title : "Scheduling" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
  <link rel="apple-touch-icon" href="<%= image_path 'iTunesArtwork@2x.png' %>" />
  <meta name="viewport" content="width=device-width; initial-scale=1.0;" />
</head>
<body>
<header class="navbar navbar-fixed-top">
  <div class="navbar-inner" style="z-index:1;vertical-align:bottom;max-height:25px;" id="nav">
		<%= render "layouts/navbar", width: "wide" %>
	</div>
</header>
<div class="container">
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
