<!DOCTYPE html>
<html>
<head>
  <title><%= @title ? @title : "Scheduling" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width; initial-scale=1.0;" />
</head>
<body>
<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
      <%= link_to "Time Saver", root_path, id: "logo" %>
      <div id="nav">
      	<%= render "layouts/navbar_wide" %>
      </div>
  </div>
</header>
<div class="container">
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<%= yield %>
</div>
</body>
</html>
<script>
$(function() {
if ($(window).width() < 620) {
$('#nav').html('<%= escape_javascript render "layouts/navbar_thin" %>')
} else {
$('#nav').html('<%= escape_javascript render "layouts/navbar_wide" %>')
}
});
$(window).resize(function() {
if ($(window).width() < 620) {
$('#nav').html('<%= escape_javascript render "layouts/navbar_thin" %>')
} else {
$('#nav').html('<%= escape_javascript render "layouts/navbar_wide" %>')
}
});
</script>
