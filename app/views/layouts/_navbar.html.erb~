<script>
$(function () {
	var navbar_width = $("#navbar_links").outerWidth();
	var logo_width = $("#navbar_logo").outerWidth();
	var formWidth = 0;

	$(".navbar-form").children().each(function() {
		if ($(this).attr("id") != "text_name") {
		    formWidth = formWidth + $(this).width();
		}
	});
	var text_name_width = $(window).width() - navbar_width - logo_width - formWidth;
	$("#name").width(text_name_width);
});
</script>

